---
layout: default
back_button: ..
pagination:
    data: collections.tagList
    size: 1
    alias: tag
permalink: /posts/tags/{{ tag }}/
excludeFromSitemap: true
eleventyComputed:
    title: Posts tagged {{ tag }}
---

<div class="container h-feed">
	<h1 class="post-list-heading p-name">
		Posts tagged "{{ tag }}"
	</h1>
    {%- if descriptions[tag] %}
    <p>
        {{ descriptions[tag] | markdownify }}
    </p>
    {%- endif %}
	<ol class="post-list">
        {%- for post in collections[tag] reversed %}
        <li>
			{% include "post-card.html" post: post, showKind: true  %}
        </li>
        {%- endfor %}
    </ol>
    <p>
        Also look for posts tagged
        <a href="https://octothorp.es/~/{{ tag | downcase }}/">#{{ tag }}</a>
        on other websites registered with
        <a href="https://octothorp.es/">octothorp.es</a>.
    </p>
</div>
